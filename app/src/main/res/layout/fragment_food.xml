<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodFragment">

    <ScrollView
        android:id="@+id/foodScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBreakFast"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/breakfast"
                android:text="Breakfast Menu"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnPizza"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/pizza"
                android:text="Pizza Menu"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnBurger"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/burger"
                android:text="Burger Menu"
                android:textColor="@color/white"
                android:textSize="24dp" />


        </LinearLayout>

    </ScrollView>

</FrameLayout>