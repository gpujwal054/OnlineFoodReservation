<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".FoodFragment"
    tools:visibility="visible">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgBtnBreakfast"
                android:layout_width="391dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/breakfast" />


            <TextView
                android:id="@+id/tVbreakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BREAKFAST" />

            <ImageButton
                android:id="@+id/imgBtnPizza"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/piza" />

            <TextView
                android:id="@+id/tVpizza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PIZZA" />

            <ImageButton
                android:id="@+id/imgBtnBurger"
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/burger" />

            <TextView
                android:id="@+id/tVburger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BURGER"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="695dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>