<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PromotionActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_promotion" />

    <ImageView
        android:id="@+id/restroWines"
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="false"
        app:srcCompat="@drawable/wines" />

    <TextView
        android:id="@+id/textWines"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="30dp"
        android:text='                "Free of bottle of wine"               When you spend more than Rs 1000 on a menu.'
        android:textColor="#F7F5F5"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/restroDrinks"
        android:layout_width="421dp"
        android:layout_height="294dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="3dp"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="true"
        app:srcCompat="@drawable/drinks" />

    <TextView
        android:id="@+id/textDrinks"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="30dp"
        android:text='                "Free of bottle of drinks"            When you spend more than Rs 500 on a menu.'
        android:textColor="#F7F5F5"
        android:textSize="20sp" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>