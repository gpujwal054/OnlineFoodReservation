<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnFoodFragment"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/food"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Food Menu"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textColor="@color/yellow"/>

            <Button
                android:id="@+id/btnDessertFragment"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/desert"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Dessert Menu"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textColor="@color/yellow"/>

            <Button
                android:id="@+id/btnDrinkFragment"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drinks"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Drink Menu"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textColor="@color/yellow"/>

            <Button
                android:id="@+id/btnBarFragment"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bar"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Bar Menu"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textColor="@color/yellow"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>