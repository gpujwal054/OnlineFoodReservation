<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                android:id="@+id/btnFoodFragment"
                android:layout_width="208dp"
                android:layout_height="208dp"
                android:layout_margin="5dp"
                android:textColor="@color/aqua"
                android:textSize="24dp"
                android:layout_weight="1"
                android:background="@drawable/food"
                android:text="Food Menus" />

            <Button
                android:id="@+id/btnDessertFragment"
                android:layout_width="208dp"
                android:layout_height="208dp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:layout_weight="1"
                android:background="@drawable/desert"
                android:text="Dessert Menus" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnDrinkFragment"
                    android:layout_width="208dp"
                    android:layout_height="208dp"
                    android:layout_margin="5dp"
                    android:textSize="24dp"
                    android:textColor="@color/yellow"
                    android:layout_weight="1"
                    android:background="@drawable/drinks"
                    android:text="Drink Menus" />

                <Button
                    android:id="@+id/btnBarFragment"
                    android:layout_width="208dp"
                    android:layout_height="208dp"
                    android:layout_margin="5dp"
                    android:textSize="24dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:background="@drawable/bar"
                    android:text="Bar Menus" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>