<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DessertFragment">

    <ScrollView
        android:id="@+id/drinksScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnCake"
                android:layout_width="391dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:background="@drawable/cake"
                android:scaleType="fitCenter" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tVMartini"
                            android:layout_width="129dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="131dp"
                            android:text="Cake" />

                        <TextView
                            android:id="@+id/tVprice"
                            android:layout_width="129dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="131dp"
                            android:text="RS:450" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnIncrement1"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="+" />

                    <EditText
                        android:id="@+id/quantity_textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnIncrement"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@id/btnIncrement"
                        android:inputType="text"
                        android:padding="15dp"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnDecrement1"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnBrownie"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:background="@drawable/brownie"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tVmargarita"
                            android:layout_width="129dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="131dp"
                            android:text="Brownie" />

                        <TextView
                            android:id="@+id/tVmargarita"
                            android:layout_width="129dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="131dp"
                            android:text="RS:550"
                            tools:ignore="DuplicateIds" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnIncrement2"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="+" />

                    <EditText
                        android:id="@+id/quantity_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnIncrement"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@id/btnIncrement"
                        android:inputType="text"
                        android:padding="15dp"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnDecrement2"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/btnPudding"
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:background="@drawable/pudding"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tVBeer"
                            android:layout_width="129dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="131dp"
                            android:text="Pudding" />

                        <TextView
                            android:id="@+id/tVPrice"
                            android:layout_width="129dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="131dp"
                            android:text="RS:450" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnIncrement3"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="+" />

                    <EditText
                        android:id="@+id/quantity_textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnIncrement"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@id/btnIncrement"
                        android:inputType="text"
                        android:padding="15dp"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnDecrement3"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>