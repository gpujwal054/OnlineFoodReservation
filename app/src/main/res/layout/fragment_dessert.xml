<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DessertFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgBtnmartini"
                android:layout_width="391dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/martini" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tVMartini"
                            android:layout_width="129dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="131dp"
                            android:text="MARTINI" />
                        <TextView
                            android:id="@+id/tVprice"
                            android:layout_width="129dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="131dp"
                            android:text="RS:450" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnIncrement1"
                        android:layout_marginTop="30dp"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+" />

                    <EditText
                        android:id="@+id/quantity_textview1"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnIncrement"
                        android:layout_toRightOf="@id/btnIncrement"
                        android:inputType="text"
                        android:padding="15dp"
                        android:textColor="@android:color/white"/>

                    <Button
                        android:id="@+id/btnDecrement1"
                        android:layout_marginTop="30dp"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/imgBtnMargarita"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"

                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/margarita" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tVmargarita"
                            android:layout_width="129dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="131dp"
                            android:text="MARGARITA" />
                        <TextView
                            android:id="@+id/tVmargarita"
                            android:layout_width="129dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="131dp"
                            android:text="RS:550"
                            tools:ignore="DuplicateIds" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnIncrement2"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="+"/>

                    <EditText
                        android:id="@+id/quantity_textview"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnIncrement"
                        android:layout_toRightOf="@id/btnIncrement"
                        android:inputType="text"
                        android:padding="15dp"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnDecrement2"
                        android:layout_marginTop="30dp"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-"
                        />
                </LinearLayout>
            </LinearLayout>


            <ImageButton
                android:id="@+id/imgBtnBeer"
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/beer"
                tools:layout_editor_absoluteX="17dp"
                tools:layout_editor_absoluteY="504dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tVBeer"
                            android:layout_width="129dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="131dp"
                            android:text="BEER" />
                        <TextView
                            android:id="@+id/tVPrice"
                            android:layout_width="129dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="131dp"
                            android:text="RS:450" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnIncrement3"
                        android:layout_marginTop="30dp"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+" />

                    <EditText
                        android:id="@+id/quantity_textview3"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnIncrement"
                        android:layout_toRightOf="@id/btnIncrement"
                        android:inputType="text"
                        android:padding="15dp"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnDecrement3"
                        android:layout_marginTop="30dp"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>