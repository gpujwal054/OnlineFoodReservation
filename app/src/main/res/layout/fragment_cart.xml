<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartFragment">

    <ScrollView
        android:id="@+id/cartScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:id="@+id/linearLayoutCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D800BCD4"
                android:text="Delivery Details"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Full Name"
                android:id="@+id/tVName"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/eTName"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="textPersonName"
                android:ems="10"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Address"
                android:id="@+id/tVAddress"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/eTAddress"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="textPostalAddress"
                android:ems="10"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Phone No."
                android:id="@+id/tvPhone"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/eTPhone"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="phone"
                android:ems="10"/>

            <Button
                android:id="@+id/btnSubmitDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:text="Submit Details"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#D800BCD4"
                android:text="Khalti Payment"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="22sp" />
            <khalti.widget.KhaltiButton
                android:id="@+id/khalti_button"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text='"We will call you to confirm the order after your order are submitted."'
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>