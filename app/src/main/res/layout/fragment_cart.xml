            <TextView
                android:id="@+id/tvDelivery"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#D800BCD4"
                android:text="Delivery Details"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tVName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:text="Full Name"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/eTName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tVAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:text="Address"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/eTAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:inputType="textPostalAddress"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:text="Phone No."
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/eTPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:inputType="phone"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnSubmitDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="30dp"
                android:text="Submit Details"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPayment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="#D800BCD4"
                android:text="Khalti Payment"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="24sp" />
            <khalti.widget.KhaltiButton
                android:id="@+id/khalti_button"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text='"We will call you to confirm the order after your order are submitted."'
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>